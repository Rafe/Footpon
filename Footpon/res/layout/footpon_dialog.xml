<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
  	android:layout_width="wrap_content"
  	android:layout_height="fill_parent">
  
	<TextView
  		android:id="@+id/dialog_store_name"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"></TextView>

  	<TextView
  		android:id="@+id/dialog_hiddenDescription"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"></TextView>
  	
  	<TextView
  		android:id="@+id/dialog_realDescription"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"></TextView>
  	
  	<TextView 
  		android:id="@+id/dialog_pointsRequired"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:textSize="32sp"></TextView>
  	
  	<Button 
  		android:id="@+id/dialog_show_details"
  		android:text="ShowDetails"
  		android:padding="12dip" 
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"></Button>
  	
</LinearLayout>

