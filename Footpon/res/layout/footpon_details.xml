<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent"   
    android:background="@drawable/item_back"
    android:orientation="vertical">
    <RelativeLayout 
    	android:layout_width="fill_parent"    
    	android:layout_height="fill_parent"
    	android:paddingBottom="4dip"   
    	android:paddingLeft="12dip"  
    	android:paddingRight="12dip"
    	android:paddingTop="12dip">
		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingTop="12dip"
		    android:layout_marginTop="20px"
		    android:layout_alignParentLeft="true"
		    android:id="@+id/logo"
		    android:src="@drawable/puma"
		    />
		<TextView
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"   
		    android:layout_marginTop="18px"
		    android:textSize="20dip"
		    android:paddingLeft="12dip"
		    android:paddingTop="12dip"
		    android:textColor="#0000FF"
		    android:id="@+id/detail_store_name"
		    android:layout_toRightOf="@+id/logo"
		    />
		<TextView   
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"   
		    android:layout_marginTop="16px"
		    android:textSize="18dip"   
		    android:paddingLeft="12dip" 
		    android:textColor="#000000"  
		    android:id="@+id/detail_description" 
		    android:layout_below="@+id/detail_store_name"
		    />
		    <TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="18px"
		    android:paddingLeft="20dip" 
		    android:textSize="40dip"
		    android:textColor="#000000"
		    android:id="@+id/detail_required_steps"
		    android:layout_below="@+id/detail_description"
		    />
		<TextView
	    	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4px"
			android:paddingLeft="12dip" 
			android:text="Starts at:     "
			android:textSize="20dip"
			android:textColor="#000000"
			android:id="@+id/date1"
			android:layout_below="@+id/detail_required_steps"
			/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="4px"
		    android:textSize="20dip"
		    android:textColor="#FF4500"
		    android:id="@+id/detail_start_date"
		    android:layout_toRightOf="@+id/date1"
		    android:layout_below="@+id/detail_required_steps"
		    />
		<TextView
	    	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="12dip" 
			android:text="Expires at:     "
			android:textSize="20dip"
			android:textColor="#000000"
			android:id="@+id/date2"
			android:layout_below="@+id/detail_start_date"
			/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dip"
		    android:textColor="#FF4500"
		    android:id="@+id/detail_expire_date"
		    android:layout_toRightOf="@+id/date2"
		    android:layout_below="@+id/detail_start_date"
		    />
		<Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:text="Use it now!"
		    android:id="@+id/Use"
		    android:textColor="#FF0000"
		    android:layout_marginTop="20px"
		    android:layout_below="@+id/date2"
		    />
    </RelativeLayout> 
    <LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:background="#EEE">
    	<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Steps:"
			android:textStyle="bold"
			android:textSize="24sp"
			android:textColor="#222"
			android:layout_weight="1"
		></TextView>
		<TextView android:id="@+id/detail_steps" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="0"
			android:textStyle="bold"
			android:textSize="26sp"
			android:textColor="#222"
			android:layout_weight="2"
		/>
	</LinearLayout>
</RelativeLayout>  