<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent"   
    android:paddingBottom="4dip"   
    android:paddingLeft="12dip"  
    android:paddingRight="12dip"
    android:background="@drawable/item_back"
    android:orientation="vertical">
    <RelativeLayout 
    	android:layout_width="fill_parent"    
    	android:layout_height="fill_parent" 
    	android:layout_above="@+id/steps">
		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingTop="12dip"
		    android:layout_marginTop="20px"
		    android:layout_alignParentLeft="true"
		    android:id="@+id/logo"
		    android:src="@drawable/puma"
		    />
		<TextView
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"   
		    android:layout_marginTop="18px"
		    android:textSize="20dip"
		    android:paddingLeft="12dip"
		    android:textColor="#0000FF"
		    android:id="@+id/detail_store_name"
		    android:layout_below="@+id/logo"
		    />
		<TextView   
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"   
		    android:layout_marginTop="18px"
		    android:textSize="18dip"   
		    android:paddingLeft="12dip" 
		    android:textColor="#000000"  
		    android:id="@+id/detail_real_description" 
		    android:layout_below="@+id/detail_store_name"
		    />
		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20px"
		    android:textSize="40dip"
		    android:textColor="#000000"
		    android:id="@+id/detail_required_steps"
		    android:layout_below="@+id/detail_real_description"
		    />
		<TextView
	    	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Expires at:     "
			android:layout_marginTop="4px"
			android:textSize="20dip"
			android:textColor="#000000"
			android:id="@+id/date1"
			android:layout_below="@+id/detail_required_steps"
			/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="4px"
		    android:textSize="20dip"
		    android:text="Nov 31"
		    android:textColor="#FF4500"
		    android:id="@+id/detail_expire_date"
		    android:layout_toRightOf="@+id/date1"
		    android:layout_below="@+id/detail_required_steps"
		    />
		<Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:text="Use it now!"
		    android:id="@+id/Use"
		    android:textColor="#FF0000"
		    android:layout_marginTop="20px"
		    android:layout_below="@+id/date1"
		    />
    </RelativeLayout> 
    <TextView
    	android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="5px"
		android:paddingLeft="15dip" 
		android:text="Your steps: 144"
		android:textSize="30dip"
		android:textColor="#9900FF"
		android:background="#CCCCCC"
		android:id="@id/steps"
		/>
</RelativeLayout>  